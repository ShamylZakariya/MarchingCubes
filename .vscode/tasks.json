{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Unit Tests",
            "type": "shell",
            "command": "meson test -v",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "type": "meson",
            "mode": "build",
            "label": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}